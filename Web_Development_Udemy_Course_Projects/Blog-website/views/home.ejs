
<%- include("partials/header"); -%>

  <h1>Home</h1>

  <p><%= homeText %></p>

  <% posts.forEach(function(post) { %>
    <h1><%= post.title %></h1>

    <p>
      <%= post.content.substring(0, 100) + " ... " %>
      <a class="read-more" href="/posts/<%= post._id %>">Read More</a>
    </p>
    <!-- substring(start position, end position) -->

  <% }); %>

